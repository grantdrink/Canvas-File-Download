{
    "name": "Canvas File Download",
    "description": "base level extension",
    "version": "1.0",
    "manifest_version": 3,
    "host_permissions": [
        "https://bostoncollege.instructure.com/*",
        "https://cdn.inst-fs-iad-prod.inscloudgate.net/*"
    ],
    "permissions": [
        "activeTab",
        "scripting",
        "downloads",
        "tabs",
        "cookies"
    ], 
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/scripts/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
          "matches": ["https://bostoncollege.instructure.com/*"],
          "js": ["src/scripts/zipper.js"],
          "type": "module"
        }
      ],
    "web_accessible_resources": [
        {
            "resources": ["./src/scripts/scrape.js"],
            "matches": ["<all_urls>"]
        }
    ]
}